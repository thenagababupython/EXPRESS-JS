doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    link(rel='stylesheet', href='../public/bootstrap/css/font-awesome-5.8.1.css')
    link(rel='stylesheet', href='../public/bootstrap/css/bootstrap.css')
    link(rel='stylesheet', href='../public/bootstrap/css/mdb.css')
    link(rel='stylesheet', href='../public/bootstrap/css/style.css')
    title Express PUG
  body
    // Nav bar
    nav.navbar.navbar-expand-md.navbar-dark.bg-primary
      a.navbar-brand(href='/') Express PUG
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarCollapse', aria-controls='navbarCollapse', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarCollapse.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item.px-2
            a.nav-link(href='/')
              i.fa.fa-home
              |  Home
          li.nav-item.px-2
            a.nav-link(href='/about')
              i.fa.fa-id-card
              |  About Us
          li.nav-item.px-2.active
            a.nav-link(href='/profile')
              i.fa.fa-user-circle
              |  Profile
          li.nav-item.px-2
            a.nav-link(href='/services')
              i.fa.fa-cog
              |  Services
          li.nav-item.px-2
            a.nav-link(href='/contact')
              i.fa.fa-envelope
              |  Contact Us
    // Main Content Section
    section
      .jumbotron
        h1.display-4.text-primary Welcome to Your Profile
