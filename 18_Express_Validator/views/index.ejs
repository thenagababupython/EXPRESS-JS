<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="../public/bootstrap/css/font-awesome-5.8.1.css">
  <link rel="stylesheet" href="../public/bootstrap/css/bootstrap.css">
  <link rel="stylesheet" href="../public/bootstrap/css/mdb.css">
  <link rel="stylesheet" href="../public/bootstrap/css/style.css">
  <title>Express Validator</title>
</head>
<body>

<!-- Main Navbar -->
<nav class="navbar navbar-expand-md navbar-dark bg-teal">
  <a class="navbar-brand" href="/">Express Validator</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarCollapse">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="/">Home</a>
      </li>
    </ul>
  </div>
</nav>

<!-- Registration Form -->
<section class="p-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6 m-auto">
                <% if(errorsArray.length === 0){ %>
                    <div class="alert alert-success animated jackInTheBox">
                        <strong>Form Validation Success</strong>
                        <button class="close" data-dismiss="alert">
                            <i class="fa fa-times-circle"></i>
                        </button>
                    </div>
                <% }%>
                <div class="card">
                    <div class="card-header bg-teal text-white text-center">
                        <h3>Register Here</h3>
                    </div>
                    <form action="/register" method="post">
                        <div class="card-body bg-light">
                            <div class="form-group">
                                <input
                                        name="email"
                                        type="email"
                                        class="form-control <%= (errorsArray.find(error => error.param === 'email')) ? 'is-invalid' : ''%>"
                                        placeholder="Your Email"
                                        value = '<%= user.email %>'>
                                <% if(errorsArray.find(error => error.param === 'email')){ %>
                                    <div class="invalid-feedback">
                                        Please Enter a valid Email Id
                                    </div>
                                <% }%>
                            </div>
                            <div class="form-group">
                                <input
                                        name="password"
                                        type="password"
                                        class="form-control <%= (errorsArray.find(error => error.param === 'password')) ? 'is-invalid' : ''%>"
                                        placeholder="Your Password"
                                        value = '<%= user.password %>'>
                                <% if(errorsArray.find(error => error.param === 'password')){ %>
                                <div class="invalid-feedback">
                                    Please Enter a Password of 5 letters
                                </div>
                                <% }%>
                            </div>
                            <div class="form-group">
                                <input
                                        name="c_password"
                                        type="password"
                                        class="form-control <%= (errorsArray.find(error => error.param === 'c_password')) ? 'is-invalid' : ''%>"
                                        placeholder="Confirm Password"
                                        value = '<%= user.c_password %>'>
                                <% if(errorsArray.find(error => error.param === 'c_password')){ %>
                                <div class="invalid-feedback">
                                    Both the Passwords NOT Matched
                                </div>
                                <% }%>
                            </div>
                        </div>
                        <div class="card-footer bg-light">
                            <div class="text-center">
                                <input type="submit" value="Register" class="btn btn-teal">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Main Footer -->
<footer class="p-3 bg-teal text-white text-center">
  <div class="container">
    <div class="row">
      <div class="col">
        <h3>Copyright &copy; 2019 , Express Validator</h3>
        <h6>All Rights Reserved</h6>
        <h6>Developed & Maintained by Express Validator</h6>
      </div>
    </div>
  </div>
</footer>

<!-- Scripts -->
<script src="../public/bootstrap/js/jquery-3.3.1.min.js"></script>
<script src="../public/bootstrap/js/popper.min.js"></script>
<script src="../public/bootstrap/js/bootstrap.js"></script>
<script src="../public/bootstrap/js/mdb.js"></script>
</body>
</html>